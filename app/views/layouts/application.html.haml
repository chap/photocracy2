%html{:xmlns => "http://www.w3.org/1999/xhtml", :'xml:lang' => "en", :lang => "en"}
  %head
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    %title Which photo is more Princeton? | photocracy.org
    =stylesheet_link_tag 'reset', 'text', 'grid'
    /[if IE 6] 
      =stylesheet_link_tag 'ie6'
    /[if IE 7] 
      =stylesheet_link_tag 'ie'
    =stylesheet_link_tag 'application'
    =javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    :javascript
      $(document).ready(function(){
        column_heights = new Array();
          $("#secondary_content .grid_4").each(function(index) {
          column_heights[index] = $(this).height();
        });
        
        tallest = Math.max.apply(null,column_heights);
        $("#secondary_content .grid_4").each(function(index) {
          $(this).height(tallest);
        });
      });
  %body
